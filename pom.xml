	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>**/*.xml</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<preparationGoals>assembly:directory-single</preparationGoals>
					<arguments>-DupdateReleaseInfo -Prelease</arguments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.atlassian.maven.plugins</groupId>
				<artifactId>maven-upload-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<execution>
						<id>upload-artifact</id>
						<phase>deploy</phase>
						<goals>
							<goal>upload</goal>
						</goals>
						<configuration>
							<resourceSrc>
								${basedir}/${project.reporting.outputDirectory}/${downloadDir}/${pom.artifactId}-${pom.version}.zip
							</resourceSrc>
							<resourceDest>${pom.artifactId}/Downloads</resourceDest>
							<serverId>atlassian-documentation</serverId>
							<url>dav:https://docs.atlassian.com/</url>
						</configuration>
					</execution>
					<!--execution>
						<id>upload-stable-metadata</id>
						<phase>site-deploy</phase>
						<goals>
							<goal>upload</goal>
						</goals>
						<configuration>
							<resourceSrc>${project.reporting.outputDirectory}/${metadataDir}/${pom.artifactId}-${pom.version}-metadata.dir/latestStableVersion.xml</resourceSrc>
							<resourceDest>${pom.artifactId}</resourceDest>
							<serverId>atlassian-documentation</serverId>
							<url>dav:https://docs.atlassian.com/</url>
						</configuration>
					</execution-->
					<execution>
						<id>upload-metadata</id>
						<phase>deploy</phase>
						<goals>
							<goal>upload</goal>
						</goals>
						<configuration>
							<resourceSrc>
								${project.reporting.outputDirectory}/${metadataDir}/${pom.artifactId}-${pom.version}-metadata.dir/latestPossibleVersion.xml
							</resourceSrc>
							<resourceDest>${pom.artifactId}</resourceDest>
							<serverId>atlassian-documentation</serverId>
							<url>dav:https://docs.atlassian.com/</url>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<configuration>
					<excludeFilterFile>idea/build-tools/findbugs-exclude.xml</excludeFilterFile>
					<xmlOutput>true</xmlOutput>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
				<version>1.0-beta-1</version>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
				<!--configuration>
					<format> {0,date}, {0,time} </format>
					<items>
						<item>timestamp</item>
					</items>
				</configuration-->
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>${pom.basedir}/src/main/assembly/idea-metadata-assembly.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>distribution-package</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>${pom.basedir}/src/main/assembly/idea-plugin-assembly.xml</descriptor>
							</descriptors>
							<outputDirectory>${project.reporting.outputDirectory}/${downloadDir}</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>metadata</id>
						<phase>package</phase>
						<goals>
							<goal>directory-single</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.reporting.outputDirectory}/${metadataDir}</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.atlassian.maven.plugins</groupId>
				<artifactId>maven-clover-plugin</artifactId>
				<configuration>
					<licenseLocation>${clover.licenseLocation}</licenseLocation>
					<cloverDatabase>${clover.database}</cloverDatabase>
					<cloverMergeDatabase>${clover.mergeDatabase}</cloverMergeDatabase>
					<targetPercentage>60%</targetPercentage>
					<jdkLevel>${jdkLevel}</jdkLevel>
					<excludes>
						<exclude>**/thirdparty/**/*.*</exclude>
						<exclude>**/soap/xfire/**/*.*</exclude>
					</excludes>
				</configuration>
				<executions>
					<!--execution>
						<phase>pre-site</phase>
						<goals>
							<goal>instrument</goal>
							<goal>aggregate</goal>
						</goals>
					</execution-->
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-idea-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<ideaPlugin>true</ideaPlugin>
					<jdkName>IDEA 7590</jdkName>
					<jdkLevel>${jdkLevel}</jdkLevel>
					<wildcardResourcePatterns>!?*.java</wildcardResourcePatterns>
					<downloadSources>true</downloadSources>
					<libraries>
						<library>
							<name>Clover</name>
							<exclude>false</exclude>
						</library>
						<library>
							<name>jdom</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>openapi</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>annotations</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>extensions</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>forms_rt</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>javac2</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>bootstrap</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>idea</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>dom4j</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>xercesImpl</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>xalan</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>xmlParserAPIs</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>xml-apis</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>xmlrpc</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>trove4j</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>picocontainer</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>idea-junit</name>
							<exclude>true</exclude>
						</library>						
					</libraries>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>ideauidesigner-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>javac2</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<fork>true</fork>
					<debug>true</debug>
					<failOnError>true</failOnError>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-pmd-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.4.2</version>
				<configuration>
					<excludes>
						<exclude>**/*$*</exclude>
						<!-- idea test do not work outside IDEA runtime -->
						<exclude>**/*IdeaTest.java</exclude>
					</excludes>
				</configuration>
			</plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
				<version>2.2</version>
                <dependencies>
                    <dependency>
                        <groupId>com.atlassian.connector</groupId>
                        <artifactId>atlassian-connector-build-tools</artifactId>
                        <version>2.1.0</version>
                    </dependency>
                </dependencies>
            </plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>springRichclientRepository</id>
			<name>Spring rich client repository</name>
			<url>http://spring-rich-c.sourceforge.net/maven2repository</url>
		</repository>
		<repository>
			<id>atlassian-restricted</id>
			<url>https://maven.atlassian.com/restricted</url>
		</repository>
	        <repository>
	        	<id>atlassian-public-repository</id>
	        	<url>https://maven.atlassian.com/public</url>
	        </repository>
	</repositories>
