<!--jgorycki: TODO: The fact that we need this file is generally stupid. We should be putting findBugs exclusions-->
<!--as annotations in the source code. But these annotations are currently not documented sufficiently for me-->
<!--to bother looking them up wherever they are described. Hopefully in the future we will deprecate this file-->

<FindBugsFilter>

	<!--ctor of $$$setupUI$$$ is generated automagically from the form, skipping -->
	<Match>
		<Or>
			<Class name="com.atlassian.theplugin.idea.PluginConfigurationForm"/>
			<Class name="com.atlassian.theplugin.idea.config.serverconfig.BambooServerConfigForm"/>
		</Or>
		<Bug pattern="DM_BOOLEAN_CTOR"/>
	</Match>

	<!--stupid findBugs does not like multithreading apparently :)-->
	<Match>
		<Class name="com.atlassian.theplugin.bamboo.HtmlBambooStatusListener"/>
		<Bug pattern="IS2_INCONSISTENT_SYNC"/>
	</Match>

	<!--this class cannot be static as it does need reference to its parent through usage of sibling inner classes-->
	<Match>
		<Class name="com.atlassian.theplugin.idea.PluginStatusBarToolTip$ToolTipTitleBar"/>
		<Bug pattern="SIC_INNER_SHOULD_BE_STATIC_NEEDS_THIS"/>
	</Match>

	<!-- findBugs has something against in-place created anonymous inner classes -->
	<Match>
		<Or>
			<Class name="com.atlassian.theplugin.idea.PluginConfigurationForm$2"/>
			<Class name="com.atlassian.theplugin.idea.PluginStatusBarToolTip$1"/>
			<Class name="com.atlassian.theplugin.idea.UserDataContext$1"/>
			<Class name="com.atlassian.theplugin.idea.config.FooterPanel$1"/>
			<Class name="com.atlassian.theplugin.idea.config.FooterPanel$2"/>
			<Class name="com.atlassian.theplugin.idea.crucible.CruciblePatchUploadForm$1"/>
			<Class name="com.atlassian.theplugin.bamboo.HtmlBambooStatusListener$1"/>
			<Class name="com.atlassian.theplugin.idea.bamboo.BambooStatusIcon$1"/>
		</Or>
		<Bug pattern="SIC_INNER_SHOULD_BE_STATIC_ANON"/>
	</Match>

	<!--mouse listener adapter seems to be generating this-->
	<Match>
		<Class name="com.atlassian.theplugin.idea.PluginStatusBarToolTip$ToolTipTitleBar$1"/>
		<Bug pattern="URF_UNREAD_FIELD"/>
	</Match>

	<!--third party code-->
	<!--TODO: we should probably narrow it down to specific bug codes, or some bugs may slip through-->
	<!--when objects of these classes are called somewhere else-->
	<Match>
		<Or>
			<Package name="thirdparty.net.iharder.base64"/>
			<Class   name="com.atlassian.theplugin.util.ClasspathImageView"/>
		</Or>
	</Match>

	<!--genereated from WSDL-->
	<Match>
		<Or>
			<Package name="com.atlassian.theplugin.crucible.api.soap.xfire.review"/>
			<Package name="com.atlassian.theplugin.crucible.api.soap.xfire.auth"/>
		</Or>
	</Match>

	<!--reflection is used to call these-->
	<Match>
		<Method name="createUIComponents"/>
	</Match>

</FindBugsFilter>
