<assembly>
  <id>package</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>./target/classes</directory>
      <outputDirectory>${pom.project.artifactId}/classes</outputDirectory>
      <excludes>
        <exclude>META-INF/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>./target/classes/META-INF</directory>
      <outputDirectory>${pom.project.artifactId}/META-INF</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>${pom.project.artifactId}/lib</outputDirectory>
      <scope>runtime</scope>
      <includes>
		<include>commons-httpclient:commons-httpclient:jar</include>
		<include>commons-logging:commons-logging:jar</include>
		<include>joda-time:joda-time:jar</include>  
	  </includes>
    </dependencySet>
  </dependencySets>
</assembly>
