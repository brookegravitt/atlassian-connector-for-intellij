								</relocation>
								<relocation>
									<pattern>org.apache.commons.discovery</pattern>
									<shadedPattern>shadow.org.apache.commons.discovery</shadedPattern>
								</relocation>
								<relocation>
									<pattern>org.apache.commons.httpclient</pattern>
									<shadedPattern>shadow.org.apache.commons.httpclient</shadedPattern>
								</relocation>
								<!--<relocation>-->
									<!--<pattern>org.apache.commons.logging</pattern>-->
									<!--<shadedPattern>shadow.org.apache.commons.logging</shadedPattern>-->
								<!--</relocation>-->
								<relocation>
									<pattern>org.apache.commons.codec</pattern>
									<shadedPattern>shadow.org.apache.commons.codec</shadedPattern>
								</relocation>
								<!--<relocation>-->
