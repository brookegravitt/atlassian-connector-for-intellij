							<!--<exclude>META-INF/*.RSA</exclude>-->
							<!--</excludes>-->
							<!--</filter>-->
							<!--</filters>-->
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>

				<configuration>
					<descriptors>
						<descriptor>${pom.basedir}/src/main/assembly/idea-metadata-assembly.xml</descriptor>
					</descriptors>

					<outputDirectory>${project.reporting.outputDirectory}/${metadataDir}</outputDirectory>
				</configuration>
				<executions>
					<execution>
						<id>dependency-jar-package</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>${pom.basedir}/src/main/assembly/idea-plugin-zip.xml</descriptor>
							</descriptors>
							<outputDirectory>${project.reporting.outputDirectory}/${downloadDir}</outputDirectory>
						</configuration>
					</execution>

					<execution>
						<id>metadata</id>
						<phase>package</phase>
						<goals>
							<goal>directory-single</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>${pom.basedir}/src/main/assembly/idea-metadata-assembly.xml</descriptor>
							</descriptors>

							<outputDirectory>${project.reporting.outputDirectory}/${metadataDir}</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-idea-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<ideaPlugin>true</ideaPlugin>
					<jdkName>IDEA 9952</jdkName>
					<jdkLevel>${jdkLevel}</jdkLevel>
					<wildcardResourcePatterns>!?*.java</wildcardResourcePatterns>
					<downloadSources>true</downloadSources>
					<libraries>

						<library>
							<name>extensions</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>com.toedter</name>
							<exclude>false</exclude>
						</library>
						<library>
							<name>Clover</name>
							<exclude>false</exclude>
						</library>
						<library>
							<name>jdom</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>openapi</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>forms_rt</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>bootstrap</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>idea</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>dom4j</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>xercesImpl</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>xalan</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>xmlParserAPIs</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>xml-apis</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>xmlrpc</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>axis-jaxrpc</name>
							<exclude>false</exclude>
						</library>
						<library>
							<name>axis-saaj</name>
							<exclude>false</exclude>
						</library>
						<library>                                                                          p
							<name>trove4j</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>picocontainer</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>idea-junit</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>commons-logging</name>
							<exclude>true</exclude>
						</library>
						<library>
							<name>util</name>
							<exclude>true</exclude>
						</library>
					</libraries>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>ideauidesigner-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>javac2</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<fork>true</fork>
					<debug>true</debug>
					<failOnError>true</failOnError>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-pmd-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.4.2</version>
				<configuration>
					<excludes>
						<exclude>**/*$*</exclude>
						<!-- idea test do not work outside IDEA runtime -->
						<exclude>**/*IdeaTest.java</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<version>2.2</version>
				<dependencies>
					<dependency>
						<groupId>com.atlassian.connector</groupId>
						<artifactId>atlassian-connector-build-tools</artifactId>
						<version>2.3.0-SNAPSHOT</version>
					</dependency>
				</dependencies>
				<configuration>
					<excludes>
						**/idea/**/*Form.java,
						**/idea/**/*Dialog.java,
						**/idea/**/CrucibleCustomFilterPanel.java,
						**/soap/xfire/**/*.java,
						**/soap/axis/**/*.java,
						**/soap/axisv4/**/*.java,
						**/IssueComment.java,
						**/IssueCreate.java,
						**/ChangesetCreate.java,
						**/CollapsiblePanel.java,
						**/thirdparty/**/*.*,
						**/JIRAIssueFilterPanel.java,
						**/JIRAButtonPanel.java,
						**/WorkLogCreateAndMaybeDeactivate.java,
						**/DialogWithDetails.java,
						**/IntelliJBambooServerFacade.java,
						**/BuildTreeEventHandler.java,
						**/IssueDetailsToolWindow.java
					</excludes>
				</configuration>
			</plugin>
		</plugins>


	</build>

	<repositories>
		<repository>
			<id>atlassian-restricted</id>
			<url>dav:https://maven.atlassian.com/content/repositories/atlassian-restricted/</url>
			<snapshots>
				<enabled>false</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>fail</checksumPolicy>
			</snapshots>
			<releases>
				<enabled>true</enabled>
				<checksumPolicy>fail</checksumPolicy>
			</releases>
		</repository>

	</repositories>


</project>
