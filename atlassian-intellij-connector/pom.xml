	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>**/*.xml</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-scm-plugin</artifactId>
				<version>1.4</version>
			</plugin>

			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
				<!-- newest version 2.7 fails to merge resources -->
				<version>2.6</version>
				<configuration>
					<skip>false</skip>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<preparationGoals>assembly:directory-single</preparationGoals>
					<arguments>-DallowTimestampedSnapshots=true -DupdateReleaseInfo -Prelease</arguments>
					<allowTimestampedSnapshots>true</allowTimestampedSnapshots>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.atlassian.maven.plugins</groupId>
				<artifactId>maven-upload-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<execution>
						<id>upload-artifact</id>
						<phase>deploy</phase>
						<goals>
							<goal>upload</goal>
						</goals>
						<configuration>
							<resourceSrc>
								${project.reporting.outputDirectory}/${downloadDir}/${pom.artifactId}-${pom.version}-plugin-zip.zip
							</resourceSrc>
							<resourceDest>${pom.artifactId}/Downloads</resourceDest>
							<serverId>atlassian-documentation</serverId>
							<url>dav:https://update.atlassian.com/</url>
						</configuration>
					</execution>
					<execution>
						<id>upload-stable-metadata</id>
						<phase>site-deploy</phase>
						<goals>
							<goal>upload</goal>
						</goals>
						<configuration>
							<resourceSrc>
								${project.reporting.outputDirectory}/${metadataDir}/${pom.artifactId}-${pom.version}-metadata.dir/latestStableVersion.xml
							</resourceSrc>
							<resourceDest>${pom.artifactId}</resourceDest>
							<serverId>atlassian-documentation</serverId>
							<url>dav:https://update.atlassian.com/</url>
						</configuration>
					</execution>
					<execution>
						<id>upload-metadata</id>
						<phase>deploy</phase>
						<goals>
							<goal>upload</goal>
						</goals>
						<configuration>
							<resourceSrc>
								${project.reporting.outputDirectory}/${metadataDir}/${pom.artifactId}-${pom.version}-metadata.dir/latestPossibleVersion.xml
							</resourceSrc>
							<resourceDest>${pom.artifactId}</resourceDest>
							<serverId>atlassian-documentation</serverId>
							<url>dav:https://update.atlassian.com/</url>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<configuration>
					<excludeFilterFile>idea/build-tools/findbugs-exclude.xml</excludeFilterFile>
					<xmlOutput>true</xmlOutput>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.groovy.maven</groupId>
				<artifactId>gmaven-plugin</artifactId>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<source>
								import java.util.Date
								import java.text.MessageFormat
								def vartimestamp = MessageFormat.format("{0,date,yyMMddHHmm}", new Date())
								project.properties['buildNumber'] = vartimestamp
							</source>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>1.4</version>
