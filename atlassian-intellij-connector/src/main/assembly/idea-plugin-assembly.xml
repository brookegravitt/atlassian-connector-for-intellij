<assembly>
    <!--id>plugin</id-->
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>./target/classes</directory>
            <outputDirectory>${pom.project.artifactId}/classes</outputDirectory>
            <excludes>
                <exclude>META-INF/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>./target/classes/META-INF</directory>
            <outputDirectory>${pom.project.artifactId}/META-INF</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>./LICENSE</source>
            <outputDirectory>${pom.project.artifactId}/</outputDirectory>
        </file>
        <file>
            <source>${basedir}/lib/atlassian-idea-plugin-integration-0.1-SNAPSHOT.jar</source>
            <outputDirectory>${pom.project.artifactId}/lib</outputDirectory>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>${pom.project.artifactId}/lib</outputDirectory>
            <scope>runtime</scope>
            <includes>
                <include>com.atlassian.connector:atlassian-connector-commons:jar</include>
                <include>commons-httpclient:commons-httpclient:jar</include>
                <include>commons-logging:commons-logging:jar</include>
                <include>commons-discovery:commons-discovery:jar</include>
                <include>commons-io:commons-io:jar</include>
                <include>commons-codec:commons-codec:jar</include>
                <include>commons-lang:commons-lang</include>
                <include>joda-time:joda-time:jar</include>
                <include>axis:axis:jar</include>
                <include>org.apache.axis:axis-jaxrpc:jar</include>
                <include>org.apache.axis:axis-saaj:jar</include>
                <include>wsdl4j:wsdl4j:jar</include>
                <include>com.toedter:jcalendar:jar</include>
                <include>com.thoughtworks.xstream:xstream:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
